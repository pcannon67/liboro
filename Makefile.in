prefix = @prefix@

SUB_DIRS = src

CLEAN = rm -rf

INVOKE_SUBMAKES = for d in $(SUB_DIRS);\
		do \
		$(MAKE) -C $$d $@; \
		done

all %:
	$(INVOKE_SUBMAKES)

